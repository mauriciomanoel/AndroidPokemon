<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#17171B</item>
    </style>
    <style name="description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#747476</item>
    </style>
    <style name="pokemon_id">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9917171B</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="pokemon_name">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="pokemon_detail_id">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9917171B</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="pokemon_detail_name">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#8BBE8A</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>
    <style name="title_tab_base_stats">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#62B957</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme.AppBarOverlay">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>


</resources>